<MyOwnLabel@Label>
    font_size: '25sp'
    haling: 'left'
    valing: 'middle'
    text_size: self.size

<Container>:
    rows: 3
    text_input: text_input
    bot_score: bot_score
    user_score: user_score
    user_name: user_name

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.15

        TextInput:
            text: 'Enter your name'
            id: text_input
            font_size: '25sp'
            input_type: 'text'
            multiline: False

    GridLayout:
        cols: 2
        padding: [40, 0, 0, 0]

        BoxLayout:
            orientation: 'vertical'

            MyOwnLabel:
                text: 'Bot'
                id: bot_name

            MyOwnLabel:
                text: '0'
                id: bot_score

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1

            MyOwnLabel:
                text: 'User'
                id: user_name

            MyOwnLabel:
                text: '0'
                id: user_score


    BoxLayout:
        size_hint: 0.1, 0.15
        padding: [30, 20, 30, 20]

        Button:
            text: 'Камень'
            id: rock
            on_release:
                root.play('rock')

        Button:
            text: 'Ножницы'
            id: scissors
            on_release:
                root.play('scissors')

        Button:
            text: 'Бумага'
            id: paper
            on_release:
                root.play('paper')



