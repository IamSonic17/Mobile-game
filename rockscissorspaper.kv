<MyOwnLabel@Label>
    font_size: '25sp'
    halign: 'center'
    valign: 'top'
    text_size: self.size

<Container>:
    rows: 3
    bot_score: bot_score
    user_score: user_score
    user_name: user_name
    status: status
    rock: rock

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 0.1, 0.15

        GridLayout:
            cols: 2
            padding: [0, 20, 0, 0]

            BoxLayout:

                MyOwnLabel:
                    text: 'Bot ->'
                    id: bot_name


                MyOwnLabel:
                    text: '0'
                    id: bot_score


            BoxLayout:

                MyOwnLabel:
                    text: '0'
                    id: user_score

                MyOwnLabel:
                    text: '<- User'
                    id: user_name

    Label:
        text: 'What is in your hand?'
        font_size: 25
        id: status

    BoxLayout:
        size_hint: 0.1, 0.75
        padding: [30, 20, 30, 20]

        Button:
            text: 'Камень'
            id: rock
            on_release:
                root.play('rock')

        Button:
            text: 'Ножницы'
            id: scissors
            on_release:
                root.play('scissors')

        Button:
            text: 'Бумага'
            id: paper
            on_release:
                root.play('paper')



